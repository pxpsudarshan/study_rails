<div class="container w-75 m-auto">
  <h1 class="text-left mt-5 mb-3">特定技能試験問題</h1>
  <hr class="mx-0 border border-secondary border-2 opacity-75">
  <div class="row justify-content-center">
    <div class="col">
      <div class="card mb-1 ">
        <ul class="list-group list-group-flush text-left ">
        <% @tokutei.contents.order(:sort).each.with_index(1) do |data, index| %>
          <%= link_to (data.contents.present? ? tokutei_contents_path(id: data.id) : tokutei_content_path(id: data.id)), class: 'text-decoration-none d-inline-block w-100 text-reset' do %>
            <li class="list-group-item dropdown-item">
              <h6><%= "#{index}. #{data.title}" %></h6>
              <p class="mb-0"><%= get_content(data, current_user.lang_id) %></p>
            </li>
          <% end %>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>


