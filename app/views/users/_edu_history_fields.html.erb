<div class="form-control mb-1">
    <div class="row ">
        <div class="col-sm-auto mb-1">
            <%= f.date_field :created_at, as: :date, value: f.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %>
        </div>
        <div class="col-sm mb-1">
            <%= f.text_field :lang_id, placeholder: '学校名', class: 'form-control' %>
        </div>
            <div class="col-sm-2 mb-1">
                <%= f.select :lang_id, options_for_select([
                    ['-', 0],
                    ['大学(博士)', 1],
                    ['大学(修士)', 2],
                    ['大学(学部)', 3],
                    ['専門学校', 4],
                    ['高校 卒業', 5]
                ], f.object.lang_id), {}, class: "form-select"%>
            </div>
        <div class="col-sm-auto mb-1">
            <div class="d-flex gap-3">
                <%= f.select :lang_id, options_for_select([
                    ['-', 0],
                    ['卒業', 1],
                    ['中退', 2],
                    ['休学', 3],
                    ['卒業予定', 4]
                ], f.object.lang_id), {}, class: "form-select" %>
                <%= f.select :lang_id, options_for_select([
                    ['-', 0],
                    ['日本', 1],
                    ['アメリカ', 2]
                ], f.object.lang_id), {}, class: "form-select" %>
            </div>
        </div>
        <div class="col-sm-2 mb-1">
            <%= f.text_field :lang_id, placeholder: '専攻', class: 'form-control' %>
        </div>
    </div>
</div>
