<div class="card w-50 m-auto border-student rounded-0">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal text-center' }) do |f| %>
  <%= embedded_svg 'niho_logo.svg', class: 'm-4' %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="form-floating mt-3 w-75 m-auto">
    <%= f.email_field :email, placeholder: 'name@example.com', class: 'form-control', required: false %>
    <%= f.label :email %>
  </div>
  <div class="form-floating w-75 m-auto">
    <%= f.password_field :password, placeholder: 'パスワード', class: 'form-control', required: false %>
    <%= f.label :password %>
  </div>
  <% if devise_mapping.rememberable? -%>
  <div class="checkbox mb-3">
    <%= f.label :remember_me do %>
      <%= f.check_box :remember_me, checked: true, value: true %> <%= t('activerecord.attributes.user.remember_me') %>
    <% end %>
  </div>
  <% end %>
  <%= f.submit t('.sign_in'), class: 'w-75 m-auto btn btn-lg btn-dark rounded-0' %>
<% end %>
<p class="mt-5 mb-3 text-center"><%= render "users/shared/links" %></p>
</div>
