<div class="card w-50 m-auto border-3 rounded-0 border-student">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal text-center margin-auto' }) do |f| %>
  <%= embedded_svg 'niho_logo.svg', class: 'm-4' %>
  <h1 class="h3 mb-3 fw-normal text-center"><%= t('.forgot_your_password') %></h1>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="form-floating text-center">
    <%= f.email_field :email, placeholder: 'name@example.com', class: 'form-control', required: false %>
    <%= f.label :email %>
  </div>
  <%= f.submit t('.send_me_reset_password_instructions'), class: 'mt-3  m-auto btn btn-lg btn-dark rounded-0 ' %>
<% end %>
<p class="mt-5 m-4 text-center"><%= render "users/shared/links" %></p>
</div>
