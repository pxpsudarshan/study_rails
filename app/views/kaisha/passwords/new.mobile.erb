<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
  <%= image_tag 'icon.png', class: 'mb-4' %>
  <h1 class="h3 mb-3 fw-normal"><%= t('.forgot_your_password') %></h1>
  <%= render "kaisha/shared/error_messages", resource: resource %>
  <div class="form-floating">
    <%= f.email_field :email, placeholder: 'name@example.com', class: 'form-control', required: false %>
    <%= f.label :email %>
  </div>
  <%= f.submit t('.send_me_reset_password_instructions'), class: 'mt-3 w-100 btn btn-lg btn-primary' %>
<% end %>
<p class="mt-5 mb-3"><%= render "kaisha/shared/links" %></p>
