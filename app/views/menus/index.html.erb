
<ul class="dropdown-menu border-0 text-center inherit d-block w-25 m-auto">
  
  <%= pie_chart @chart_data, 
      height: "200px", 
      width: "400px",
      colors: ["#28a745", "#17a2b8"],
      title: "Your Learning Progress",
      legend: true,
      donut: true
  %>
  
 <hr class="m-1">

    <div class="btn-group mb-3">
      <%= link_to 'Weekly', menus_path(period: 'weekly'), 
          class: "btn btn-sm #{params[:period] == 'weekly' || params[:period].nil? ? 'btn-primary' : 'btn-outline-primary'}" %>
      <%= link_to 'Monthly', menus_path(period: 'monthly'), 
          class: "btn btn-sm #{params[:period] == 'monthly' ? 'btn-primary' : 'btn-outline-primary'}" %>
      <%= link_to 'Yearly', menus_path(period: 'yearly'), 
          class: "btn btn-sm #{params[:period] == 'yearly' ? 'btn-primary' : 'btn-outline-primary'}" %>
    </div>

    <%= line_chart @line_chart_data,
        height: "300px",
        width: "100%",
        colors: ["#17a2b8"],
        title: "Study Progress Over Time",
        legend: false,
        points: true,
        xtitle: "Time Period",
        ytitle: "Studied"
    %>


  

  <li class="dropdown-item fw-bold" data-bs-toggle="collapse" data-bs-target="#collapsePart" aria-expanded="false" aria-controls="collapsePart">
    Select Parts
  </li>

  <div class="collapse" id="collapsePart">
    <div class="card card-body p-0" style="margin: 0 3%;">
      <ul class="dropdown-menu inherit d-block w-100 m-auto">
        <li class="dropdown-item">
          <%= link_to 'part', parts_path, class: 'text-decoration-none d-inline-block w-100 text-reset w-100' %>
        </li>
      </ul>
    </div>
  </div>
  <hr class="m-1">

  <li class="dropdown-item fw-bold" data-bs-toggle="collapse" data-bs-target="#collapseVocab" aria-expanded="false" aria-controls="collapseVocab">
    Select Vocabulary
  </li>

  <div class="collapse" id="collapseVocab">
    <div class="card card-body p-0" style="margin: 0 3%;">
      <ul class="dropdown-menu inherit d-block w-100 m-auto">
        <li class="dropdown-item">
          <%= link_to 'goi', gois_path, class: 'text-decoration-none d-inline-block w-100 text-reset' %>
        </li>
        <hr class="m-1">
        <li class="dropdown-item">
          <%= link_to 'kuni', foreigns_path, class: 'text-decoration-none d-inline-block w-100 text-reset' %>
        </li>
        <hr class="m-1">
        <li class="dropdown-item">
          <%= link_to 'Specific skill word', specified_vocabs_path, class: 'text-decoration-none d-inline-block w-100 text-reset' %>
        </li>
      </ul>
    </div>
  </div>
  <hr class="m-1">

  <li class="dropdown-item fw-bold" data-bs-toggle="collapse" data-bs-target="#collapseKanji" aria-expanded="false" aria-controls="collapseKanji" >
    Select Kanji
  </li>

  <div class="collapse" id="collapseKanji">
    <div class="card card-body p-0" style="margin: 0 3%;">
      <ul class="dropdown-menu inherit d-block w-100 m-auto">
        <li class="dropdown-item">
          <%= link_to 'kanji', kanjis_path, class: 'text-decoration-none d-inline-block w-100 text-reset' %>
        </li>
        <hr class="m-1">
        <li class="dropdown-item">
          <%= link_to 'kanji_scroll', kanji_scrolls_path, class: 'text-decoration-none d-inline-block w-100 text-reset' %>
        </li>
        <hr class="m-1">
        <li class="dropdown-item">
          <%= link_to 'kanji_unit', kanji_units_path, class: 'text-decoration-none d-inline-block w-100 text-reset' %>
        </li>
      </ul>
    </div>
  </div>
  <hr class="m-1">

  <li class="dropdown-item fw-bold" data-bs-toggle="collapse" data-bs-target="#collapseJlpt" aria-expanded="false" aria-controls="collapseJlpt" >
    Jlpt
  </li>

  <div class="collapse" id="collapseJlpt">
    <div class="card card-body p-0" style="margin: 0 3%;">
      <ul class="dropdown-menu inherit d-block w-100 m-auto">
        <li class="dropdown-item">
          <%= link_to 'jlpt N5', jlpts_path(jlpt: 5), class: 'text-decoration-none d-inline-block w-100 text-reset' %>
        </li>
        <hr class="m-1">
        <li class="dropdown-item">
          <%= link_to 'jlpt N4', jlpts_path(jlpt: 4), class: 'text-decoration-none d-inline-block w-100 text-reset' %>
        </li>
        <hr class="m-1">
        <li class="dropdown-item">
          <%= link_to 'jlpt N3', jlpts_path(jlpt: 3), class: 'text-decoration-none d-inline-block w-100 text-reset' %>
        </li>
        <hr class="m-1">
        <li class="dropdown-item">
          <%= link_to 'jlpt N2', jlpts_path(jlpt: 2), class: 'text-decoration-none d-inline-block w-100 text-reset' %>
        </li>
        <hr class="m-1">
        <li class="dropdown-item">
          <%= link_to 'jlpt N1', jlpts_path(jlpt: 1), class: 'text-decoration-none d-inline-block w-100 text-reset' %>
        </li>
      </ul>
    </div>
  </div>
  <hr class="m-1">

  <li class="dropdown-item fw-bold" data-bs-toggle="collapse" data-bs-toggle="collapse" data-bs-target="#collapsemycard" aria-expanded="false" aria-controls="collapsemycard">
    Select MyCard Review
  </li>
  <div class="collapse" id="collapsemycard">
    <div class="card card-body p-0" style="margin: 0 3%;">
      <ul class="dropdown-menu inherit d-block w-100 m-auto">
        <li class="dropdown-item">
          <%= link_to 'select', vocab_mycards_path, class: 'text-decoration-none d-inline-block w-100 text-reset' %>
        </li>
      </ul>
    </div>
  </div>
  <hr class="m-1">

  <li class="dropdown-item fw-bold" data-bs-toggle="collapse" data-bs-toggle="collapse" data-bs-target="#collapsequiz" aria-expanded="false" aria-controls="collapsequiz">
    Quiz
  </li>
  <div class="collapse" id="collapsequiz">
    <div class="card card-body mb-1 p-0" style="margin: 0 3%;">
      <ul class="dropdown-menu inherit d-block w-100 m-auto">
        <li class="dropdown-item">
          <%= link_to 'Start Quiz', quizes_path, class: 'text-decoration-none d-inline-block w-100 text-reset'  %>
        </li>
        <% Tokutei.where(tokutei_id: nil).each do |tokutei| %>
            <hr class="m-1">
            <li class="dropdown-item">
              <%= link_to (current_user.lang_id == 'JP' ? tokutei.title : "#{get_content(tokutei, current_user.lang_id)}"), tokutei_contents_path(id: tokutei.id), class: 'text-decoration-none d-inline-block w-100 text-reset'  %>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
  <hr class="m-1">

   <li class="dropdown-item fw-bold" data-bs-toggle="collapse" data-bs-target="#collapseConversation" aria-expanded="false" aria-controls="collapseConvertion">
  Conversation
  </li>

  <div class="collapse" id="collapseConversation">
  <div class="card card-body p-0" style="margin: 0 3%;">
    <ul class="dropdown-menu inherit d-block w-100 m-auto">
      <% @audio_as.each_with_index do |audio_a, index| %>
        <% if index > 0 %> <hr class="m-1"> <% end %>
        <li class="dropdown-item">
            <%= link_to "#{title_nation(audio_a)}", specified_conversations_path(id: audio_a.id), class: 'text-decoration-none d-inline-block w-100 text-reset' %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

</ul>
