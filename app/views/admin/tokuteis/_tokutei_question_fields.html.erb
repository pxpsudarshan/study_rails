<tr class="nested-fields">
  <td class="text-center">
    <%= f.number_field :sort, class: 'form-control' %>
  </td>
  <td class="text-center">
    <%= f.text_field :title, class: 'form-control' %>
  </td>
  <td class="text-center">
    <%= f.text_area :content, class: 'form-control' %>
  </td>
  <td class="text-start text-nowrap">
    <%= link_to t('buttons.edit').html_safe, edit_admin_tokutei_question_path(id: f.object.id), class: 'btn btn-primary' if f.object.persisted? %></td>
  <td class="text-center text-nowrap">
    <%= link_to_remove_association t('buttons.destroy').html_safe, f, class: "btn btn-danger" %>
  </td>
</tr>
