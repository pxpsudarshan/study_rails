<tr class="nested-fields">
  <td class="text-center">
    <%= f.text_field :language, class: 'form-control' %>
  </td>
  <td class="text-center">
    <%= f.text_area :content, class: 'form-control' %>
  </td>
  <td class="text-center text-nowrap">
    <%= f.check_box :male_flg, {class: 'form-check-input'}, true, false %>
  </td>
  <td class="text-center text-nowrap">
    <%= f.check_box :update_flg, {class: 'form-check-input'}, true, false %>
  </td>
  <td class="text-center">
    <%= f.file_field :mpg, accept: 'audio/mp3', class: 'form-control' %>
  </td>
  <td class="text-center text-nowrap">
    <%= link_to_remove_association t('buttons.destroy').html_safe, f, class: "btn btn-danger" %>
  </td>
</tr>
