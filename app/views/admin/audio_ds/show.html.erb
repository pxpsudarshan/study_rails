<div class="row mb-3">
  <label class='col-md-2 text-end'><%= t('activerecord.attributes.audio_d.content') %></label>
  <div class="col-md-6">
    <%= get_content(@audio_d) %>
  </div>
</div>
<div class="row mb-3">
  <label class='col-md-2 col-form-label text-end'><%= t('activerecord.attributes.audio_d.audio_file') %></label>
  <div class="col-md-4">
    <audio controls>
      <source src="<%= get_media(@audio_d) %>" type="audio/mpeg" />
    </audio>
  </div>
</div>
<div class="row mb-3">
  <div class="col-md-8">
    <table class="table table-bordered table-sm">
      <thead>
        <tr class="table-success">
          <th class="text-start"><%= t('activerecord.attributes.language.language') %></th>
          <th class="text-start w-50"><%= t('activerecord.attributes.language.content') %></th>
          <th class="text-start text-nowrap"><%= t('activerecord.attributes.audio_d.audio_file') %></th>
        </tr>
      </thead>
      <tbody>
        <% @audio_d.languages.each do |l| %>
        <tr>
          <td class="text-start"><%= l.language %></td>
          <td class="text-start w-50"><%= l.content %></td>
          <td class="text-start text-nowrap">
            <audio controls>
              <source src="<%= get_media(l, @audio_lang) %>" type="audio/mpeg" />
            </audio>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="form-actions">
  <%= link_to t('buttons.back'), admin_audio_c_content_audio_ds_path(audio_lang: @audio_lang), class: "btn btn-sm btn-secondary" %>
</div>
