<div class="row">
  <div class="col-auto mb-3 ml-auto">
    <%= link_to t('buttons.new').html_safe, new_admin_audio_a_audio_b_path(audio_lang: @audio_lang), class: 'btn btn-primary' %>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <table class="table table-bordered table-hover table-sm">
      <thead>
        <tr class="table-success">
          <th class="text-start"><%= t('activerecord.attributes.audio_b.title_nation') %></th>
          <th class="text-start"><%= t('common.edit') %></th>
          <th class="text-start"><%= t('common.destroy') %></th>
        </tr>
      </thead>
      <tbody>
      <% @audio_bs.each do |b| %>
        <tr class="details_row nested-fields">
          <td class="text-start w-75"><%= link_to b.title_nation, admin_audio_b_audio_cs_path(audio_b_id: b.id), class: '' %></td>
          <td class="text-start"><%= link_to t('buttons.edit').html_safe, edit_admin_audio_a_audio_b_path(id: b.id, audio_lang: @audio_lang), class: 'btn btn-sm btn-primary' %></td>
          <td class="text-start text-nowrap"><%= link_to t('buttons.destroy').html_safe, admin_audio_a_audio_b_path(id: b.id, audio_lang: @audio_lang), method: :delete, class: 'btn btn-sm btn-danger' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="form-actions">
  <%= link_to t('buttons.back'), admin_audio_as_path(audio_lang: @audio_lang), class: "btn btn-sm btn-secondary" %>
</div>
