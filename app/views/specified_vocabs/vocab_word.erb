
<%= stylesheet_link_tag "jlpt", media: "all", 'data-turbo-track': 'reload' %>
<div class="m-auto w-75 row">
  <% @tokutei_bs.each do |data| %>
    <div class="col-sm-3 mt-1" style="min-width: 150px;">
      <div class="card rounded-0" style="height: 160px; overflow: auto;">
        <div class="card-body text-center">
          <div class="mycard_status">
            <% if data.level.present? %>
            <%= '⭐️' %>
            <% end %>
          </div>
          <p class="card-text"><%= data.word %></p>
          <hr class="m-1" >
          <%= link_to data.word, page_mylang_jlpts_path(vocab_code: data.word), class: 'underline d-inline-block w-100 fs-2 link-opacity-50-hover ink-dark' %>
          <hr class="m-1" >
          <p class="card-text">
            <%= data.word %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
