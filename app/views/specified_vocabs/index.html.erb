<div class="container w-75 m-auto">
  <h1 class="text-left mt-5 mb-3">特定技能語彙</h1>
  <hr class="mx-0 border border-secondary border-2 opacity-75">
  <div class="row justify-content-center">
    <div class="col">
      <div class="card mb-1 ">
        <ul class="list-group list-group-flush text-left ">
        <% if @specific_vocab.present? %>
            <% @specific_vocab.each.with_index(1) do |data, index| %>
              <%= link_to vocab_word_specified_vocabs_path(id: data.id), class: 'text-decoration-none d-inline-block w-100 text-reset' do %>
                <li class="list-group-item dropdown-item">
                  <h6><%= "#{index}. #{data.src_jpn}" %></h6>
                  <p class="mb-0"><%= src_nation(data) %></p>
                </li>
              <% end %>
            <% end %>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
