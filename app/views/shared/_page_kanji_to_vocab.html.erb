<div class="m-auto w-75">
  <div class="row">
    <% @gois.each do |vocab| %>
    <div class="col-sm-3 mt-1" style="min-width: 200px">
      <div class="card rounded-0" style="height: 160px; overflow: auto;">
          <div class="card-body text-center">
            <%= link_to vocab[:vocab_code], kanji_vocab_parts_path(vocab_id: vocab[:vocab_id]), remote: true, class: 'underline d-inline-block w-100 fs-2 link-opacity-50-hover ink-dark' %>
            <hr class="m-1">
            <p class="card-text text-center"> <%= vocab[:eng_mean] %></p>   
            <div class="d-flex flex-wrap justify-content-center">
            <% parts_body = string_to_array(vocab[:parts_body]) %>
            <% parts_body.each_with_index do |part, index| %>
            <% end %>
            <div class="position-absolute top-0 end-0 p-2">
              <button type="button" class="btn btn-sm btn-outline-primary"
              onclick="Openmodal2(
                  '<%= vocab[:parts_body] %>',
                  '<%= vocab[:eng_mean] %>',
                  '<%= vocab[:vocab_code] %>',
                   '<%= vocab[:read_code] %>',
              )"
              data-bs-toggle="modal" data-bs-target="#detailsModal">
              <i class="fas fa-book-open"></i>
              </button>
            </div>
          </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-3 shadow-lg">
      <div class="modal-header">
        <h1 class="modal-title" id="detailsModalLabel">Vocab Details</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      
      <div class="modal-body">
        <!-- Modal Content to display vocab details -->      
        <p><strong>Read Code:</strong> <span id="vocab-read_code"></span></p>
        <p><strong>Meaning:</strong> <span id="vocab-meaning"></span></p>
        <p><strong >Parts:</strong> <span id="vocab-parts"></span></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

